import Sound.Tidal.MIDI.Context

devices <- midiDevices

displayOutputDevices >>= putStrLn

-- onboard soundcard Mac mid 2012, OS X 10.11.6
-- latency between 0.320 ~ 0.325 is acceptable.
m1 <- midiStream devices "IAC Driver Tidal1" 1 (synthController {Sound.Tidal.MIDI.Context.latency = 0.321})
m2 <- midiStream devices "IAC Driver Tidal2" 1 (synthController {Sound.Tidal.MIDI.Context.latency = 0.320})

